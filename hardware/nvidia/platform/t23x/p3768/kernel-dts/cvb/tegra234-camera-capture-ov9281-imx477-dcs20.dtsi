					status="okay";
					reg = <0>;
					ov9281_vi_in0: endpoint {
						status="okay";
						port-index = <0>;
						bus-width = <2>;
						remote-endpoint = <&ov9281_csi_out0>;
					};
				};
				port@1 {
					status="okay";
					reg = <1>;
					ov9281_vi_in1: endpoint {
						status="okay";
